# BMCIS Knowledge Base Configuration
# Copy this file to .env and adjust values for your environment

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Environment: development, testing, staging, production
APP_ENVIRONMENT=development

# Debug mode (set to false in production)
APP_DEBUG=true

# API Documentation
APP_API_TITLE=BMCIS Knowledge Base API
APP_API_VERSION=1.0.0
# Set to empty string or comment out to disable API docs
APP_API_DOCS_URL=/docs

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Connection Settings
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=bmcis_knowledge_dev
DB_USER=postgres
DB_PASSWORD=

# Connection Pool Configuration
# Adjust based on your expected concurrent connections
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20

# Timeout Settings (in seconds)
DB_CONNECTION_TIMEOUT=10.0
DB_STATEMENT_TIMEOUT=30.0

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log Format: json or text
# json: Machine-parseable structured logs (recommended for production)
# text: Human-readable logs (recommended for development)
LOG_FORMAT=json

# Console Logging
LOG_CONSOLE_ENABLED=true

# File Logging
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/application.log

# Log File Rotation
# Maximum file size before rotation (default: 10485760 bytes = 10 MB, minimum: 1048576 bytes = 1 MB)
LOG_MAX_FILE_SIZE=10485760

# Number of backup log files to retain (minimum: 1)
LOG_BACKUP_COUNT=5

# ============================================================================
# NOTES FOR DIFFERENT ENVIRONMENTS
# ============================================================================

# DEVELOPMENT:
#   - APP_ENVIRONMENT=development
#   - APP_DEBUG=true
#   - LOG_LEVEL=DEBUG
#   - LOG_FORMAT=text
#   - Use local PostgreSQL instance or development server

# TESTING:
#   - APP_ENVIRONMENT=testing
#   - APP_DEBUG=false
#   - LOG_LEVEL=INFO
#   - Use test database (bmcis_knowledge_test)
#   - Connection pool can be smaller

# STAGING:
#   - APP_ENVIRONMENT=staging
#   - APP_DEBUG=false
#   - LOG_LEVEL=INFO
#   - LOG_FORMAT=json
#   - Use staging PostgreSQL server
#   - Realistic connection pool settings

# PRODUCTION:
#   - APP_ENVIRONMENT=production
#   - APP_DEBUG=false (REQUIRED)
#   - LOG_LEVEL=WARNING or ERROR
#   - LOG_FORMAT=json
#   - Use secure PostgreSQL server
#   - Optimized connection pool for expected load
#   - Store sensitive credentials in secure secret management system

# ============================================================================
# VALIDATION RULES
# ============================================================================

# Database Port: Must be between 1 and 65535
# Pool Min Size: Must be >= 1
# Pool Max Size: Must be >= Pool Min Size
# Connection Timeout: Must be > 0
# Statement Timeout: Must be > 0
# API Version: Must match semantic versioning (X.Y.Z)
# Debug Mode: Cannot be true in production environment
# Log Level: Must be one of DEBUG, INFO, WARNING, ERROR, CRITICAL
# Log Format: Must be json or text
